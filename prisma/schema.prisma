generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketClass {
  REGULAR
  PRESALE
  BUNDLING
  OTS
}

model Ticket {
  qr        String    @id @unique
  checkInAt DateTime?

  @@index([qr])
}

enum MerchSize {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

model Merch {
  qr        String    @id @unique
  size      MerchSize
  name      String
  claimedAt DateTime?
  createdAt DateTime  @default(now())

  @@index([qr])
}
